# =============================================================================
# Web Scraping Projects - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# -----------------------------------------------------------------------------
# Project Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=false

# -----------------------------------------------------------------------------
# Scraper Configuration
# -----------------------------------------------------------------------------
# Run browsers in headless mode (true/false)
HEADLESS=true

# Maximum pages to scrape per session
MAX_PAGES=5

# Request timeout in seconds
REQUEST_TIMEOUT=60

# Delay between requests (min,max in seconds)
REQUEST_DELAY_MIN=2.0
REQUEST_DELAY_MAX=5.0

# Maximum retries for failed requests
MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Browser Settings
# -----------------------------------------------------------------------------
# Browser locale
BROWSER_LOCALE=en-IN

# Browser timezone
BROWSER_TIMEZONE=Asia/Kolkata

# Block images to speed up scraping (true/false)
BLOCK_IMAGES=true

# -----------------------------------------------------------------------------
# Data Storage
# -----------------------------------------------------------------------------
# Directory for output data files
DATA_DIR=./data

# Directory for log files
LOGS_DIR=./logs

# Data format: csv, json, both
OUTPUT_FORMAT=both

# -----------------------------------------------------------------------------
# API Keys (if using external services)
# -----------------------------------------------------------------------------
# Add your API keys here if needed
# PROXY_API_KEY=your_proxy_service_key_here
# CAPTCHA_SOLVER_KEY=your_captcha_solver_key_here

# -----------------------------------------------------------------------------
# Proxy Configuration (optional)
# -----------------------------------------------------------------------------
# USE_PROXY=false
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=your_username
# PROXY_PASSWORD=your_password

# -----------------------------------------------------------------------------
# Notification Settings (optional)
# -----------------------------------------------------------------------------
# ENABLE_NOTIFICATIONS=false
# NOTIFICATION_EMAIL=your_email@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_app_password
